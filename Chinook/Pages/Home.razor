@page "/"
@using Chinook.Components
@using Chinook.Models

@attribute [Authorize]
@inherits HomeComponent

<PageTitle>Index</PageTitle>

<h1>Artists</h1>

<div class="mb-2">
    <div class="d-flex">
        <input type="text" id="SearchArtist" class="form-control" @bind-value="@SearchText" @bind-value:event="oninput" placeholder="Enter Artist Name">
        <input type="button" value="Search" @onclick="@SearchArtist" />
        <input type="button" value="Clear" @onclick="@CrealArtist" />
    </div>
</div>
<div class="mb-2">
    <div class="d-flex">
        <label>Artist Count : </label>
        <label>@ArtistCount</label>
    </div>
</div>

@if (Artists == null)
{
    <Loading />
}
else
{
    <table class="table table-striped table-hover table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Number of albums</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var artist in Artists)
            {
                <tr>
                    <td><a href="Artist/@artist.ArtistId">@artist.Name</a></td>
                    <td>@artist.Albums.Count()</td>
                </tr>
            }
        </tbody>
    </table>
}
